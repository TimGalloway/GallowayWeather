@model  GallowayWeather.ViewModels.WeatherViewModel
@{
    ViewBag.Title = "GallowayWeather";
}
<style>
    ul li {
        display: inline-block;
        border: 1px solid black;
    }
</style>
<div>
    <h1>GallowayWeather</h1>
    @using (Html.BeginForm())
    {
        <fieldset>
            Criteria: <input id="searchtext" type="text" size="50" /><img id='spinner' name='spiner' src='~/images/gears.gif' height="20" width="20" /><br />

            Results: @Html.DropDownList("lstResults", new List<SelectListItem>{
                    new SelectListItem{ Text="Perth", Value = "26797" }}
                    )<br />
            Temp Unit: @Html.DropDownList("lstUnitType", new List<SelectListItem>{
                        new SelectListItem{ Text="Metric", Value="Metric" },
                        new SelectListItem{Text="Imperial", Value="Imperial"}
                    })<br />
            <input id="btnGetWeather" type="submit" value="Get Weather" />
        </fieldset>
    }
    <br />
    <ul>
    @foreach (var item in Model.WeatherResults)
    {
        <li>
            @item.LocationText<br />
            <img src=/Images/Icons/@item.Icon-s.png /><br />
            @item.Text<br />
            @item.Temp<br />
            @item.DateCreated<br />
        </li>
    }
    </ul>
</div>